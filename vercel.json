{
  "buildCommand": "npm run build",
  "env": {
    "AFIP_CERT_PATH": "certs/afip/cert.crt",
    "AFIP_KEY_PATH": "certs/afip/key.pem"
  },
  "crons": [
    {
      "path": "/api/confirmaciones/diarias",
      "schedule": "0 22 * * *"
    },
    {
      "path": "/api/recordatorios/enviar",
      "schedule": "0 21 * * *"
    },
    {
      "path": "/api/facturas/reintentos",
      "schedule": "15 2 * * *"
    },
    {
      "path": "/api/storage/cleanup",
      "schedule": "30 3 * * *"
    }
  ]
}
